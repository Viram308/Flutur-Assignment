<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="#00131a">



        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"

            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/q"
                android:layout_width="50dp"
                android:layout_height="60dp"

                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="Q" />

            <Button
                android:id="@+id/w"
                android:layout_width="50dp"
                android:layout_height="60dp"

                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/q"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="W" />

            <Button
                android:id="@+id/e"
                android:layout_width="50dp"
                android:layout_height="60dp"

                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/w"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="E" />

            <Button
                android:id="@+id/r"
                android:layout_width="50dp"
                android:layout_height="60dp"

                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/e"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="R" />

            <Button
                android:id="@+id/t"
                android:layout_width="50dp"
                android:layout_height="60dp"

                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/r"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="T" />

            <Button
                android:id="@+id/y"
                android:layout_width="50dp"
                android:layout_height="60dp"

                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/t"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="Y" />

            <Button
                android:id="@+id/u"
                android:layout_width="50dp"
                android:layout_height="60dp"

                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/y"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="U" />

            <Button
                android:id="@+id/i"
                android:layout_width="50dp"
                android:layout_height="60dp"

                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/u"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="I" />

            <Button
                android:id="@+id/o"
                android:layout_width="50dp"
                android:layout_height="60dp"

                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/i"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="O" />

            <Button
                android:id="@+id/p"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/o"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="P" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            >

            <Button
                android:id="@+id/a"
                android:layout_width="50dp"
                android:layout_height="60dp"

                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="A" />

            <Button
                android:id="@+id/s"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/a"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="S" />

            <Button
                android:id="@+id/d"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/s"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="D" />

            <Button
                android:id="@+id/f"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/d"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="F" />

            <Button
                android:id="@+id/g"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/f"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="G" />

            <Button
                android:id="@+id/h"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/g"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="H" />

            <Button
                android:id="@+id/j"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/h"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="J" />

            <Button
                android:id="@+id/k"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/j"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="K" />

            <Button
                android:id="@+id/l"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/k"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="L" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/z"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="Z" />

            <Button
                android:id="@+id/x"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/z"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="X" />

            <Button
                android:id="@+id/c"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/x"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="C" />

            <Button
                android:id="@+id/v"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/c"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="V" />

            <Button
                android:id="@+id/b"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/v"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="B" />

            <Button
                android:id="@+id/n"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/b"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="N" />

            <Button
                android:id="@+id/m"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/n"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/arbutus_slab"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="M" />

        </RelativeLayout>
</RelativeLayout>
